{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "prettier",
    "react",
    "import",
    "babel"
  ],
  "rules": {
    "no-console": 0,
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "globals": {
    "__SERVER__": true,
    "__CLIENT__": true
  }
}
