{
  "extends": "eslint-config-airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    # begin TODO: discuss whether we should disable these rules 1 by 1
    "arrow-body-style": 0,
    "consistent-return": 0,
    "global-require": 0,
    "import/no-mutable-exports": 0, # FIXME: https://github.com/benmosher/eslint-plugin-import/issues/317
    "jsx-a11y/img-has-alt": 0,
    "max-len": 0,
    "newline-per-chained-call": 0,
    "no-case-declarations": 0,
    "no-duplicate-imports": 1,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "no-useless-escape": 0,
    "object-curly-spacing": 0,
    "prefer-template": 0,
    "quote-props": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-indent": 0,
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    # End TODO

    "babel/object-curly-spacing": [2, "never"],
    "react/no-multi-comp": 0,
    "react/jsx-curly-spacing": [2, "never"],
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "block-scoped-var": 0,
    "dot-notation": 0,
    "padded-blocks": 0,
    "comma-dangle": [2, "never"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-alert": 0,
    "wrap-iife": [2, "outside"],
    "no-shadow": 0
  },
  "plugins": [
    "react",
    "import",
    "babel"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__DEVTOOLS__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__ENABLE_CORS__": true,
    "webpackIsomorphicTools": true
  }
}
